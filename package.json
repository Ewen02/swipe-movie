{
  "name": "swipe-movie",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "storybook": "npm --workspace apps/web run storybook",
    "dev:web:storybook": "concurrently -n WEB,STORYBOOK -c blue,magenta \"npm run dev:web\" \"npm --workspace apps/web run storybook\"",
    "dev:api": "npm --workspace apps/api run start:dev",
    "dev": "concurrently -n WEB,API -c blue,green \"npm run dev:web\" \"npm run dev:api\" \"npm run db:studio\"",
    "postinstall": "npm -w apps/api run prisma:generate || true",
    "db:migrate": "npm --workspace apps/api run migrate",
    "db:studio": "npm --workspace apps/api run prisma:studio",
    "db:generate": "npm --workspace apps/api run prisma:generate",
    "db:reset": "npm --workspace apps/api run prisma migrate reset --force --skip-generate",
    "dev:clean": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true && npm run dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "framer-motion": "^12.23.24",
    "next-intl": "^4.5.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
